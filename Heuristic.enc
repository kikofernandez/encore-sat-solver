  def private largestUnassignedClause(variables : RArray[Variable], clauses : Vector[Clause]) : [int]
    var i = 0
    val iLimit = clauses.size()
    var final_clause = Nothing : Maybe[Clause]
    var number_of_unassigned_literals = -1
    var index = -1
    var literal = -1
