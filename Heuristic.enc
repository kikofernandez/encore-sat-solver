  -- TODO: pure function
  def private nUnassignedLiterals(clause : Clause, variables : RArray[Variable]) : int
    var nUnassigned = 0
    repeat i <- |clause.literals| do
      if((variables.at(literalToVarIndex(clause.literals(i)))).value == -1) then
        nUnassigned = nUnassigned + 1
      end
    end
    nUnassigned
  end

  -- TODO: pure function
  def private getUnassignedVariable(clause : Clause, variables : RArray[Variable]) : [int]
    var index = 0
    var l = 0
    var shouldBreak = false
    var i = 0
    while ((i < |clause.literals|) && (shouldBreak == false)) do
      index = literalToVarIndex(clause.literals(i))
      if((variables.at(index)).value == -1) then
        l = clause.literals(i)
        shouldBreak = true
      end
      i = i + 1
