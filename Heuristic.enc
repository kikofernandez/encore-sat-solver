  -- TODO: Pure function, doesn't cause mutation
  def private forwardLiteralInOrder(variables : RArray[Variable], clauses : Vector[Clause]) : [int]
    var index = -1
    var loop = true
    var i = 0
    val iLimit = clauses.size()
    var literal = -1
    while (loop && (i < iLimit)) do
      val clause = clauses.at(i)
